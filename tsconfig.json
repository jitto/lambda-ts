{
    "compilerOptions": {
        "forceConsistentCasingInFileNames": true,
        "target": "es2020",
        "preserveConstEnums": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "outDir": "./build",
        "rootDir": "./src",
        "skipLibCheck": true,
        "strict": true,
        "sourceMap": true,
        "noEmit": true,
        "moduleResolution":"node",
        "isolatedModules": true,     
    },
    "exclude": ["tests", "**/*.test.ts"]
}